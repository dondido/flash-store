{
    "controls": [
        {
            "type": "joystick",
            "dataset": {
                "mode": "fixed",
                "threshold": 0.5
            },
            "mappings": {
                "n": "ArrowUp",
                "e": "ArrowRight",
                "s": "ArrowDown",
                "w": "ArrowLeft"
            }
        },
        {
            "type": "button",
            "label": "Z",
            "mappings": [{ "key": "z", "code": "KeyZ" }]
        },
        {
            "type": "button",
            "label": "SP",
            "mappings": [{ "key": " ", "code": "Space" }]
        }
    ]
}