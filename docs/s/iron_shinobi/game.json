{
    "controls": [
        {
            "type": "joystick",
            "dataset": {
                "mode": "fixed",
                "threshold": 0.3
            },
            "mappings": {
                "n": "ArrowUp",
                "e": "ArrowRight",
                "s": "ArrowDown",
                "w": "ArrowLeft"
            }
        },
        {
            "type": "button",
            "label": "SP",
            "mappings": [{ "key": " ", "code": "Space" }]
        },
        {
            "type": "button",
            "label": "Z",
            "mappings": [{ "key": "z", "code": "KeyZ" }]
        },
        {
            "type": "button",
            "label": "X",
            "mappings": [{ "key": "x", "code": "KeyX" }]
        },
        {
            "type": "button",
            "label": "C",
            "mappings": [{ "key": "c", "code": "KeyC" }]
        },
        {
            "type": "button",
            "label": "I",
            "mappings": [{ "key": "i", "code": "KeyI" }]
        },
        {
            "type": "button",
            "label": "K",
            "mappings": [{ "key": "k", "code": "KeyK" }]
        }
    ]
}