{
    "controls": [
        {
            "type": "joystick",
            "dataset": {
                "mode": "fixed",
                "threshold": 0.5
            },
            "mappings": {
                "n": "ArrowUp",
                "e": "ArrowRight",
                "s": "ArrowDown",
                "w": "ArrowLeft"
            }
        },
        {
            "type": "button",
            "label": "X",
            "mappings": [{ "key": "x", "code": "KeyX" }]
        },
        {
            "type": "button",
            "label": "A",
            "mappings": [{ "key": "a", "code": "KeyA" }]
        },
        {
            "type": "button",
            "label": "SP",
            "mappings": [{ "key": " ", "code": "Space", "which": 32 }]
        }
    ]
}