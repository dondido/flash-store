{
    "controls": [
        {
            "type": "joystick",
            "dataset": {
                "mode": "fixed",
                "threshold": 0.3
            },
            "mappings": {
                "n": "ArrowUp",
                "e": "ArrowRight",
                "s": "ArrowDown",
                "w": "ArrowLeft"
            }
        },
        {
            "type": "button",
            "label": "X",
            "mappings": [{ "key": "X", "code": "KeyX" }]
        },
        {
            "type": "button",
            "label": "C",
            "mappings": [{ "key": "c", "code": "KeyC" }]
        }
    ]
}