{
    "controls": [
        {
            "type": "joystick",
            "dataset": {
                "mode": "fixed",
                "threshold": 0.3
            },
            "mappings": {
                "n": "ArrowUp",
                "e": "ArrowRight",
                "s": "ArrowDown",
                "w": "ArrowLeft"
            }
        },
        {
            "type": "button",
            "label": "R",
            "mappings": [{ "key": "r", "code": "KeyR" }]
        },
        {
            "type": "button",
            "label": "C",
            "mappings": [{ "key": "c", "code": "KeyC" }]
        },
        {
            "type": "button",
            "label": "SP",
            "mappings": [{ "key": " ", "code": "Space", "which": 32 }]
        }
    ]
}