{
    "controls": [
        {
            "type": "joystick",
            "dataset": {
                "mode": "fixed",
                "threshold": 0.2
            },
            "mappings": {
                "n": "ArrowUp",
                "e": "ArrowRight",
                "s": "ArrowDown",
                "w": "ArrowLeft"
            }
        },
        {
            "type": "button",
            "label": "C",
            "mappings": [{ "code": "ControlLeft" }]
        },
        {
            "type": "button",
            "label": "SP",
            "mappings": [{ "code": "Space" }]
        }
    ]
}